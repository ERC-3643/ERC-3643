{
  "root": true,
  "env": {
    "node": true,
    "mocha": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "prettier"
  ],
  "globals": {
    "expect": true,
    "artifacts": true,
    "contract": true,
    "ethers": true,
    "network": true,
    "deployments": true,
    "getNamedAccounts": true,
    "getUnnamedAccounts": true,
    "describe": true,
    "it": true,
    "before": true,
    "beforeEach": true,
    "after": true,
    "afterEach": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "prefer-const": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-arrow-callback": "error",
    "prefer-template": "error",
    "import/no-unresolved": "off",
    "import/no-extraneous-dependencies": "off",
    "import/extensions": "off",
    "prettier/prettier": "error",
    "comma-dangle": ["error", "always-multiline"],
    "max-len": ["error", { "code": 150, "ignoreUrls": true, "ignoreStrings": true }],
    "no-multiple-empty-lines": ["error", { "max": 2 }],
    "quote-props": ["error", "as-needed"],
    "no-undef": "off",
    "no-await-in-loop": "off",
    "no-unused-expressions": "off",
    "no-use-before-define": "off",
    "no-shadow": "off",
    "camelcase": "off",
    "no-param-reassign": "off",
    "dot-notation": "off"
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
      },
      "extends": [
        "eslint:recommended",
        "airbnb-base",
        "prettier"
      ],
      "plugins": [
        "@typescript-eslint",
        "prettier"
      ],
      "rules": {
        "no-unused-vars": "off",
        "no-use-before-define": "off",
        "no-shadow": "off",
        "no-redeclare": "off",
        "no-undef": "off",

        "import/no-unresolved": "off",
        "import/no-extraneous-dependencies": "off",
        "import/extensions": "off",

        "prettier/prettier": "error",
        "no-console": "off",
        "prefer-const": "error",
        "no-var": "error",
        "object-shorthand": "error",
        "prefer-arrow-callback": "error",
        "prefer-template": "error",
        "comma-dangle": ["error", "always-multiline"],
        "max-len": ["error", { "code": 150, "ignoreUrls": true, "ignoreStrings": true }],
        "no-multiple-empty-lines": ["error", { "max": 2 }],
        "quote-props": ["error", "as-needed"],
        "no-await-in-loop": "off",
        "no-unused-expressions": "off",
        "camelcase": "off",
        "no-param-reassign": "off",
        "dot-notation": "off"
      }
    },
    {
      "files": ["test/**/*.ts"],
      "rules": {
        "max-len": ["error", { "code": 200 }]
      }
    }
  ],
  "plugins": [
    "prettier"
  ]
}